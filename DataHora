using System;
namespace DataHora
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine(DateTime.Now); //Data e hora atuais
            Console.WriteLine(DateTime.Today);// Data atual

            DateTime hoje = new DateTime(2019, 5, 24);
            DateTime aniversario = new DateTime(2020, 5, 24);
            Console.WriteLine((aniversario - hoje).TotalDays);

            Console.WriteLine(hoje.DayOfWeek);

            DateTime nascimento = new DateTime(1987, 8, 27);
            Console.WriteLine((hoje - nascimento).TotalDays);

            DateTime data = Convert.ToDateTime("27/09/1988");
            Console.WriteLine(data);

            Console.ReadLine();
        }
    }
}
