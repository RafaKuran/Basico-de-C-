using System;

namespace DiaDaSemana
{
    class Program
    {
        static void Main(string[] args){
            int diaSemana;

            Console.Write("Entre com o dia da semana: ");
            diaSemana = Convert.ToInt32(Console.ReadLine());
      
            switch (diaSemana) {
              case 1:
                Console.Write("Domingo");
                break;
              case 2:
                Console.Write("Segunda");
                break;
              case 3:
                Console.Write("Terça");
                break;
              case 4:
                Console.Write("Quarta");
                break;
              case 5:
                Console.Write("Quinta");
                break;
              case 6:
                Console.Write("Sexta");
                break;
              case 7:
                Console.Write("Sábado");
                break;
              default:
                Console.Write("Dia inválido!");
                break;
            }
        }
     }
}
