using System;
					
public class Program
{
	public static void Main()
	{
		int num;
		
		Console.Write("Digite um número: ");
		num = Convert.ToInt32(Console.ReadLine());
		
		if (num > 0){
			Console.Write("{0} é positivo!", num);
		}
		else{
			if (num < 0){
				Console.Write("{0} é negativo!", num);
			}
			else{
				if (num == 0){
					Console.Write("{0} é zero!", num);
				}
			}
		}
	}
}
