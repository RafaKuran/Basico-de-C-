using System;
					
public class Program
{
	public static void Main()
	{
		double salario, reajuste;
		
		Console.Write("Qual o valor do sal치rio: ");
		salario = Convert.ToDouble(Console.ReadLine());
		Console.Write("De quanto ser치 o reajuste: ");
		reajuste = Convert.ToDouble(Console.ReadLine());
		
		salarioFinal = salario + (salario * (reajuste / 100));
		
		Console.Write("O sal치rio reajustado ser치 de R$ {0}", salarioFinal.ToString("N2"));
	}
}
