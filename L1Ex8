using System;
					
public class Program
{
	public static void Main()
	{
		int raio;
		double area;
		
		Console.Write("Qual o raio do círculo: ");
		raio = Convert.ToInt32(Console.ReadLine());
		
		area =  Math.PI * Math.Pow(raio, 2);		
		
		Console.Write("A área do círculo será {0} cm.", area.ToString("N2"));
	}
}
