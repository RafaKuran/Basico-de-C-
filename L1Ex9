using System;
					
public class Program
{
	public static void Main()
	{
		int raio;
		double area;
		
		Console.Write("Qual o raio da esfera: ");
		raio = Convert.ToInt32(Console.ReadLine());
		
		area =  (Math.PI * 4) * Math.Pow(raio, 2);		
		
		Console.Write("A área da esfera será {0} cm.", area.ToString("N2"));
	}
}
